[user]
        name = Droogans
        email = droogans@gmail.com
[color]
        ui = always
[color "branch"]
        current = cyan
        local = yellow
        remote = magenta
[color "diff"]
        meta = yellow
        frag = white dim
        old = red
        new = cyan
        whitespace = white reverse
[color "status"]
        added = cyan
        changed = red
        untracked = yellow
[alias]
        aa = add -A
        ap = apply --check # diff.patch
        br = branch -a --no-merged
        ci = commit
        cleanup = "!git branch --no-color --merged | grep  -v 'master' | xargs -n 1 git branch -d"
        co = checkout
        cp = cherry-pick
        df = diff
        dfc = diff --cached
        fp = format-patch
        lg = log --pretty=tformat:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -n
        origin = push origin -q
        pull = pull --rebase
        purr = pull --rebase
        read = show
        recap = diff --stat HEAD HEAD~1
        rip = commit --amend --no-edit
        sbt = subtree push --prefix # app|dist origin gh-pages
        so = !git am -3 --signoff < # diff.patch
        sor = am --resolved
        split = reset HEAD^
        st = status -sb
        standup = !git lg --since yesterday --author `git config user.email`
        swap = "!git stash; git checkout master; git checkout -b $1; git stash pop;"
        update = "![ `git st | wc -l` -gt 1 ] && echo "Clean working state required." && exit 1; git co master; git fetch --all --prune; git cleanup; [[ `git remote` == 'origin' ]] && git purr origin master && exit 0; git purr upstream master; git origin"
        upstream = push upstream -q
[push]
        default = current
[core]
        editor = /Applications/Emacs.app/Contents/MacOS/bin/emacsclient
        excludesfile = ~/.gitignore.global
[url "https://"]
        insteadOf = git://
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
