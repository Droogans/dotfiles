[user]
        name = Droogans
        email = droogans@gmail.com
[color]
        diff = auto
        status = auto
        branch = auto
[color "branch"]
        current = cyan
        local = yellow
        remote = magenta
[color "diff"]
        meta = yellow
        frag = white dim
        old = red
        new = cyan
        whitespace = white reverse
[color "status"]
        added = cyan
        changed = red
        untracked = yellow
[alias]
        aa = add -A
        ap = apply --check # diff.patch
        br = branch -a --no-merged
        ci = commit
        cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"
        co = checkout
        cp = cherry-pick
        df = diff
        dfc = diff --cached
        fp = format-patch
        lg = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        origin = push origin -q
        pull = pull --rebase
        purr = pull --rebase
        read = log -1 -p
        recap = show --pretty="format:" --name-status HEAD
        rip = commit --amend --no-edit
        so = !git am -3 --signoff < # diff.patch
        sor = am --resolved
        split = reset HEAD^
        st = status -sb
        standup = !git lg --since yesterday --author `git config user.email`
        update = !git fetch --all --prune && git pull --rebase upstream master && git push origin master && git cleanup
        upstream = push upstream -q
[push]
        default = current
[core]
	editor = /Applications/Emacs.app/Contents/MacOS/bin/emacsclient
[url "https://"]
	insteadOf = git://
