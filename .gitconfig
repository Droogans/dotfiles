[user]
        name = Droogans
        email = droogans@gmail.com
[color]
        diff = auto
        status = auto
        branch = auto
[color "branch"]
        current = cyan
        local = yellow
        remote = magenta
[color "diff"]
        meta = yellow
        frag = white dim
        old = red
        new = cyan
        whitespace = white reverse
[color "status"]
        added = cyan
        changed = red
        untracked = yellow
[alias]
        br = branch -a --no-merged
        ci = commit
        co = checkout
        cp = cherry-pick
        df = diff
        dfc = diff --cached
        lg = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        origin = push origin -q
        pull = pull --rebase
        purr = pull --rebase
        read = log -1 -p
        recap = show --pretty="format:" --name-status HEAD
        rip = commit --amend --no-edit
        split = reset HEAD^
        st = status -sb
        standup = !git lg --since yesterday --author `git config user.email`
        update = !git fetch --all --prune && git pull --rebase upstream master && git push origin master
        upstream = push upstream -q
[push]
        default = current
